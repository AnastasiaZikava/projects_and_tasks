<div class="container project_block my-5">
  <div class="row">
    <div class="col-md-12 p-4 m-3">
      <h1><%= @project.name %></h1>
      <p><%= @project.summary %></p>        
      <div>
        <b>Start date:</b> <%= @project.start_date %>
      </div>
      <div>
        <b>End date:</b> <%= @project.end_date %>
      </div>
    </div>
  </div>        
  <div class="row px-4">
    <h2 class="col-md-12">
      Tasks:
    </h2>
  </div>
  <div class="row justify-content-center ml-4 mr-4">  
    <div class="col-md-12">
      <% if @project.tasks.count > 0 %>   
        <table class="table task_table table-responsive">
          <thead class="thead-light">
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Status</th>
              <th>Assigned to</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <%= render @project.tasks %> 
          </tbody>
        </table>      
      <% else %>
        <i>Not created yet.</i>
      <% end %>
    </div>     
  </div>
  <div class="row">
    <div class="mb-3 mt-1 mx-4">
      <%= link_to 'New Task', new_project_task_path(@project) , class: "btn btn_edit_task" %>
    </div>
  </div>    
</div>
