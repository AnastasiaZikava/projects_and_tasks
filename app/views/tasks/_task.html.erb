<tr>
  <td class="align-top">
    <%= task.title%>
  </td> 
  <td class="align-top">
    <%= task.description%>
  </td>
  <td class="align-top">
    <%= task.status%>
  </td>

  <% user = User.where('id = ?', task.user_id).first %>
  <% if user != nil %>
    <td class="align-top">
      <%= user.first_name%>
    </td>
  <% else %>
    <td class="align-top">
      no one appointed
    </td>
  <% end %>

  <td class="py-1">
    <%= link_to 'Delete task', [task.project, task],
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"btn btn_delete_task"  %>
  </td>
  <td class="py-1">
    <%= link_to 'Edit',  [:edit, task.project, task], class: "btn btn_edit_task" %>
  </td>
</tr>        